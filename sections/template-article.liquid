{% for block in section.blocks %}
    {% case block.type %}
        {% when 'article_title' %}
            <h1>{{ article.title }}</h1>
        {% when 'article_author' %}
            {% if section.settings.enable_author %}
                <small>{{ article.author }}</small>
            {% endif %}
        {% when 'article_published_date' %}
            {% if section.settings.enable_published_date %}
                <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%B %d, %Y' }}</time>
            {% endif %}
        {% when 'article_image' %}
            {% if section.settings.enable_article_image %}
                <img src="{{ article.image | image_url: width: 800 }}"
                    width="{{ article.image.width }}"
                    height="{{ article.image.height }}"
                    loading="lazy"
                    alt="{{ article.image.alt }}">
            {% endif %}
        {% when 'article_content' %}
            <div class="article-content">{{ article.content }}</div>
    {% endcase %}
{% endfor %}


{% schema %}
{
    "name": "Template Article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_author",
            "label": "Show Author Name",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "enable_published_date",
            "label": "Show Published Date",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "enable_article_image",
            "label": "Show Article Image",
            "default": true
        }
    ],
    "blocks": [
        {
            "type": "article_title",
            "name": "Title",
            "limit": 1
        },
        {
            "type": "article_author",
            "name": "Author",
            "limit": 1
        },
        {
            "type": "article_published_date",
            "name": "Published Date",
            "limit": 1
        },
        {
            "type": "article_image",
            "name": "Image",
            "limit": 1
        },
        {
            "type": "article_content",
            "name": "Content",
            "limit": 1
        }
    ]
}
{% endschema %}