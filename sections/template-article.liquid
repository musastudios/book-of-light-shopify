<article>
{% for block in section.blocks %}
    {% case block.type %}
        {% when 'article_title' %}
            <div class="flex items-center justify-center">
                <div class="max-w-7xl mx-auto text-center">
                    <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
                    <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
                </div>
            </div>
        {% when 'article_author' %}
            <div class="flex items-center justify-center">
                <div class="max-w-7xl mx-auto text-center">
                    {% if section.settings.enable_author %}
                        <small>{{ article.author }}</small>
                    {% endif %}
                </div>
            </div>
        {% when 'article_published_date' %}
            <div class="flex items-center justify-center">
                <div class="max-w-7xl mx-auto text-center">
                    {% if section.settings.enable_published_date %}
                        <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'on_date' }}</time>
                    {% endif %}
                </div>
            </div>
        {% when 'article_image' %}
            <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden">
                {% if section.settings.enable_article_image %}
                    {% if article.image != blank %}
                        <img class="w-full h-80 md:h-96 object-cover object-center" src="{{ article.image | image_url: 'large' }}"
                        width="{{ article.image.width }}"
                        height="{{ article.image.height }}"
                        loading="lazy"
                        alt="{{ article.image.alt }}">
                    {% else %}
                        {% assign placeholder_image = 'lifestyle-2' %}
                        {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
                    {% endif %}
                {% endif %}
            </div>
        {% when 'article_content' %}
            <div class="article-content">{{ article.content }}</div>
    {% endcase %}
{% endfor %}
</article>


{% schema %}
{
    "name": "Template Article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_author",
            "label": "Show Author Name",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "enable_published_date",
            "label": "Show Published Date",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "enable_article_image",
            "label": "Show Article Image",
            "default": true
        }
    ],
    "blocks": [
        {
            "type": "article_title",
            "name": "Title",
            "limit": 1
        },
        {
            "type": "article_author",
            "name": "Author",
            "limit": 1
        },
        {
            "type": "article_published_date",
            "name": "Published Date",
            "limit": 1
        },
        {
            "type": "article_image",
            "name": "Image",
            "limit": 1
        },
        {
            "type": "article_content",
            "name": "Content",
            "limit": 1
        }
    ]
}
{% endschema %}